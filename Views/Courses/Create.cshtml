</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/bootstrap-datepicker.min.js"></script>
    <script>
        $("#datepicker").datepicker({
            "format": "yyyy/mm/dd",
            "defaultViewDate": "2020/11/11",
            "beforeShowDay": function (date) {
                if (date.getMonth() == 10) {
                    if (date.getDate() == 11) {
                        return {
                            classes: "active"
                        }
                    }
                }
            }
        })
    </script>
